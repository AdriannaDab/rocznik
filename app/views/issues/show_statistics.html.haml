.scroll-panel-header
  = link_to "Wróć do numeru", issue_path, class: %w{btn btn-default btn-sm pull-right}
  %h3.scroll-panel-title
    Statystyki do numeru
    = @issue.title
.scroll-panel-body
	-if @issue.prepared?
		%h3 Opublikowane artykuły
		%table.table.table-hover.table-admin
		  %thead
		    %tr
		      %th Liczba artykułów w j.ang.
		      %th Liczba artykułów
		      %th Udział procentowy %
		  %tbody
		    - @issue.articles.each do |article|
		      %tr
		        %td= article.submissions.english_language.count
		        %td= article.submissions.count
		        %td= article.submissions.english_language.count / submissions.count * 100
